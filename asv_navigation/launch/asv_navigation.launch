<launch>
	<arg name="map_file" default="$(find asv_navigation)/maps/map.yaml"/>
	<arg name="open_rviz" default="true"/>

	<!-- Map server -->
	<node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>
	
	<!-- AMCL -->
	<include file="$(find asv_navigation)/launch/amcl.launch"/>
	
	<!-- move_base -->
	<include file="$(find asv_navigation)/launch/move_base.launch"/>

	<!-- rviz -->
	<group if="$(arg open_rviz)">
	<node pkg="rviz" type="rviz" name="rviz" required="true"
		args="-d $(find asv_navigation)/rviz/asv_navigation.rviz"/>
	</group>
</launch>
